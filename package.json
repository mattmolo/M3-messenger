{
  "name": "M3-messenger",
  "version": "1.0.0",
  "description": "Matt Molo's Multi-Messenger",
  "main": "main.js",
  "scripts": {
    "dev": "electron-rebuild && electron .",
    "package-mac":   "electron-rebuild && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icon/Icon.icns --prune=true",
    "package-win":   "electron-rebuild && electron-packager . --overwrite --platform=win32  --arch=x64 --icon=icon/Icon.ico --prune=true",
    "package-linux": "electron-rebuild && electron-packager . --overwrite --platform=linux  --arch=x64 --icon=icon/Icon_1024x1024.png --prune=true"
  },
  "repository": "https://github.com/mattmolo/M3-messenger",
  "author": "Matt Molo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.4.1",
    "electron-packager": "^8.5.1",
    "electron-rebuild": "^1.5.7"
  },
  "dependencies": {
    "electron-editor-context-menu": "^1.1.1",
    "electron-spell-check-provider": "^1.0.0",
    "electron-window-state": "^4.0.1"
  }
}
