{
  "name": "M3-messenger",
  "version": "1.0.0",
  "description": "Matt Molo's Multi-Messenger",
  "main": "main.js",
  "scripts": {
    "dev": "electron-rebuild && electron .",
    "package-mac": "electron-rebuild && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icon/Icon_macOS.icns --prune=true",
    "package-win": "electron-rebuild && electron-packager . --overwrite --platform=win32  --arch=x64 --icon=icon/Icon_Win.ico --prune=true",
    "package-linux": "electron-rebuild && electron-packager . --overwrite --platform=linux  --arch=x64 --icon=icon/Icon_1024x1024.png --prune=true"
  },
  "repository": "https://github.com/mattmolo/M3-messenger",
  "author": "Matt Molo",
  "license": "MIT",
  "devDependencies": {
    "electron": "*",
    "electron-packager": "*",
    "electron-rebuild": "*"
  },
  "dependencies": {
    "electron-editor-context-menu": "*",
    "electron-json-config": "^1.5.3",
    "electron-spell-check-provider": "*",
    "electron-window-state": "*"
  }
}
